{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kagi Assistant",
  "version": "0.1.0",
  "identifier": "com.kagi-assistant-desktop.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kagi Assistant",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "visible": false,
        "label": "main",
        "url": "https://kagi.com/assistant"
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "https://kagi.com", "https://*.kagi.com"],
        "img-src": ["'self'", "https://kagi.com", "https://*.kagi.com", "data:"],
        "connect-src": ["'self'", "https://kagi.com", "https://*.kagi.com", "wss://*.kagi.com"],
        "style-src": ["'self'", "https://kagi.com", "https://*.kagi.com", "'unsafe-inline'"],
        "script-src": ["'self'", "https://kagi.com", "https://*.kagi.com", "'unsafe-inline'"],
        "font-src": ["'self'", "https://kagi.com", "https://*.kagi.com", "data:"],
        "media-src": ["https://kagi.com", "https://*.kagi.com"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Â© 2025",
    "category": "Productivity",
    "shortDescription": "Desktop app for Kagi Assistant",
    "longDescription": "A desktop application that provides a native experience for Kagi Assistant with login support."
  }
}
